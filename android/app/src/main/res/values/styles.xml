<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Starting" parent="@android:style/Theme.Black.NoTitleBar">
   <!-- Set the splash screen background, animated icon, and animation duration. -->
   <item name="android:windowSplashScreenBackground">@color/my_custom_color</item>

   <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
        animated drawable. One of these is required. -->
   <item name="android:windowSplashScreenAnimatedIcon">@mipmap/logo</item>
   <!-- Required for animated icons -->
   <item name="android:windowSplashScreenAnimationDuration">200</item>
   <!-- Set the theme of the Activity that directly follows your splash screen. -->
   <!-- Required -->
   <!-- <item name="android:postSplashScreenTheme">@style/Theme.App</item> -->
</style>
</resources>
